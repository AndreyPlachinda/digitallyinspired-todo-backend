type Task {
	id: ID!
	body: String!
	isComplete: Boolean!
	todoList: TodoList!
}

input InputTask{
	body: String!
	isComplete: Boolean!
	todoListId: ID!
}

extend type Query {
	getAllTasksOnTodoList(todoListId: ID!): [Task]
}

extend type Mutation {
	addTask(inputTask: InputTask!): Task
	updateTask(currentTaskId: ID!, inputTask: InputTask!): Task
	deleteTask(taskId: ID!): Boolean
}