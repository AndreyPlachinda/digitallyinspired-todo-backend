type Task {
	id: ID!
	body: String!
	isComplete: Boolean!
	todoList: TodoList!
}

input TaskInput {
	body: String!
	todoListId: ID!
}

extend type Query {
	getAllTasksOnTodoList(todoListId: ID!): [Task]
}

extend type Mutation {
	addTask(taskInput: TaskInput!): Task
	updateTask(taskId: ID!, body: String!, isComplete: Boolean!): Task
	deleteTask(taskId: ID!): Boolean
}